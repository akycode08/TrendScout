# API Keys
# Получите эти ключи на соответствующих сайтах (см. README.md)
APIFY_API_KEY=your_apify_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
OPENAI_API_KEY=your_openai_key_here  # Опционально, резервный вариант

# Reddit API
# Создайте приложение на https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TrendScout/1.0

# Database
# Для начала можно использовать SQLite (проще для новичков)
DATABASE_URL=sqlite:///./trendscout.db
# Или PostgreSQL для продакшена:
# DATABASE_URL=postgresql://user:password@localhost:5432/trendscout

# General Settings
VERTICAL=coffee  # Варианты: coffee, restaurant, barbershop, etc.
DEBUG=True
LOG_LEVEL=INFO
